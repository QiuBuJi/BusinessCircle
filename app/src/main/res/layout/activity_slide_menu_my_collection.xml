<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--屏幕顶部-->
    <RelativeLayout
        style="@style/style_title_size"
        android:background="@color/color_bg_default"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/MyCollection_ll_rl_tv_back"
            style="@style/ll_ll_iv_top"
            android:drawableLeft="@mipmap/icon_houtui"
            android:drawablePadding="4dp"
            android:paddingLeft="8dp"
            android:text="返回"/>

        <TextView
            style="@style/ll_ll_iv_top"
            android:layout_centerHorizontal="true"
            android:text="我的收藏"/>

        <ImageView
            style="@style/ll_ll_iv_top"
            android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:src="@mipmap/icon_you_gengduo"/>
    </RelativeLayout>



</LinearLayout>