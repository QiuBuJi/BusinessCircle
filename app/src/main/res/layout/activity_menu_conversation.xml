<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcd9d9"
    android:orientation="vertical">

    <!--屏幕顶部-->
    <TextView
        android:id="@+id/textView3"
        style="@style/style_title_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/color_bg_default"
        android:gravity="center"
        android:text="会话"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <!--顶部搜索部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_round"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/icon_sousu" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:hint="搜索" />
    </LinearLayout>

    <!--投票通知-->
    <LinearLayout
        style="@style/style_conv_item"
        android:background="@android:color/white">

        <ImageView
            style="@style/style_conv_item_content"
            android:src="@mipmap/pci_toutong" />

        <TextView
            style="@style/style_conv_item_content"
            android:text="投票通知" />

    </LinearLayout>

    <!--礼物通知-->
    <LinearLayout
        style="@style/style_conv_item"
        android:background="@android:color/white">

        <ImageView
            style="@style/style_conv_item_content"
            android:src="@mipmap/pic_litong" />

        <TextView
            style="@style/style_conv_item_content"
            android:text="礼物通知" />

    </LinearLayout>

    <!--空白区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:background="@android:color/white">

    </LinearLayout>
</LinearLayout>