<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        android:orientation="vertical">


        <LinearLayout style="@style/style_personal_modify_data_item">

            <TextView
                style="@style/style_Personal_modify_data_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="       姓名："/>

            <EditText
                style="@style/style_Personal_modify_data_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right"
                android:hint="未填写"/>
        </LinearLayout>

        <include layout="@layout/activity_item_interval"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定手机："/>

                <EditText
                    android:id="@+id/editText"
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    android:inputType="number"/>
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          QQ："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    android:inputType="number"/>

            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        性别："/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"/>

                    <RadioButton
                        style="@style/style_Personal_modify_data_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"/>

                    <RadioButton
                        style="@style/style_Personal_modify_data_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"/>
                </RadioGroup>
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    />
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    现居地："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/activity_item_interval"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      邮箱："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    />
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      年龄："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    />
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    微信号："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/activity_item_interval"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名："/>

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"/>
            </LinearLayout>

            <View style="@style/style_line"/>

            <LinearLayout
                style="@style/style_personal_modify_data_item"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="说点什么吧..."
                    android:lines="3"/>
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/activity_item_interval"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout style="@style/style_personal_modify_data_item">

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人标识符："/>

                <TextView
                    style="@style/style_Personal_modify_data_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="未填写"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
